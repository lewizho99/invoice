<div class="container mt-5">
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand">Filters</a>
        <form class="form-inline">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">From</span>
                </div>
                <input type="date" class="form-control" placeholder="From Date" aria-label="From Date" aria-describedby="basic-addon1">
            </div>
            <div class="input-group ml-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon2">To</span>
                </div>
                <input type="date" class="form-control" placeholder="To Date" aria-label="To Date" aria-describedby="basic-addon2">
            </div>
            <div class="input-group ml-3">
                <input type="text" class="form-control" placeholder="Filter by name" aria-label="Name" aria-describedby="basic-addon3">
            </div>
        </form>
        {{#link-to 'view-route' 'new' class='nav-item nav-link'}}
            Add Invoice
        {{/link-to}}
    </nav>
</div>

<div class="container mt-5">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">From/To</th>
                <th scope="col">Due</th>
                <th scope="col">Amount (Items)</th>
                <th scope="col">Paid (Rest)</th>
                <th scope="col">Actions</th>
            </tr>
      </thead>
      <tbody>
        {{#each invoices as |invoice index| }}
            <tr>
                <th scope="row">{{sum index 1}}</th>
                <td>{{invoice.name}}<br/>
                    {{#link-to 'view-route' invoice.id}}
                        {{invoice.id}}
                    {{/link-to}}
                </td>
                <td>{{invoice.from}} -> {{invoice.to}}</td>
                <td class="{{overdue invoice.due}}">{{date invoice.due}}</td>
                <td>${{invoice.total}} ({{invoice.items.length}})</td>
                <td>${{invoice.paid}} (${{minus invoice.total invoice.paid}})</td>
                <td>
                    {{#link-to 'view-route' invoice.id class='btn btn-success btn-sm m-1'}}
                        View
                    {{/link-to}}
                    <button type="button" {{action 'remove' invoice.id}} class="btn btn-danger btn-sm">Remove</button>
                </td>
            </tr>
        {{/each}}
        <tr>
            <th scope="row" colspan="4"> Total</th>
            <th>${{arraysum invoices}} ({{itemsum invoices}})</th>
            <th>${{paidsum invoices}} (${{restsum invoices}})</th>
        </tr>
      </tbody>
    </table>
</div>
{{yield}}